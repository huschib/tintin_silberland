#ALIAS {bruteile} {
    #NOP { /**
    *   @fn     bruteile
    *   @brief  teilt Fragmente auf
    *
    *   @param  1   Wert fÃ¼r die Teilung
    */};

    #VAR items_long {};
    #VAR dividend 2;

    #REGEXP {%0} {{^([0-9]+)$}}
    {
        #VAR dividend &2
    };

    #ACTION {^Du erblickst {.+}$}
    {
        #LINE GAG;
        #CAT items_long { %%1};
        #ACTION {^{.+}$}
        {
            #LINE GAG;
            #CAT items_long { %%%1}
        };
        #ACTION {^{.+}.$}
        {
            #LINE GAG;
            #CAT items_long { %%%1};
            #UNACTION {^{.+}$};
            #UNACTION {^Du erblickst {.+}$};
            #UNACTION {^{.+}.$}
        } {1}
    };

    #SEND {untersuche alles in raum};

    #DELAY {0.1}
    {
        #VAR items_parts $items_long;
        #REPLACE items_parts {^ } {};
        #REPLACE items_parts {, } {;};
        #REPLACE items_parts { und } {;};
        #LIST items CREATE {$items_parts};
        #LIST items FILTER {%*fragmente};

        #IF {&items[] == 0}
        {
            #ECHO {Du siehst gar keine Fragmente.};
            #RETURN
        };

        #FOREACH $items[] loop
        {
            #REGEXP {$loop} {{^([0-9]+) ([A-Z][a-z]+fragmente)}}
            {
                #MATH teile {&2 / $dividend};
                #SEND {nimm $teile &3}
            }
        }
    } 
}

