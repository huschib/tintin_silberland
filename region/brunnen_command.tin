#NOP {
    Anwendung:
    - Kartenampulle trinken
    - 'brumap' ausfuehren
;#NOP }

#VAR bru_aktiv 0

#ACTION {     {#{31}}}
{
    #IF {$bru_aktiv == 1}
    {
        #VAR bru_aktiv 0;
        #MATH bru_map_int {&bru_map[] + 1};
        #LIST bru_map[$bru_map_int] TOKENIZE {%1};
        #RETURN
    };
    #VAR bru_aktiv 1;
    #LIST bru_map CREATE {};
    #LIST bru_map[1] TOKENIZE {%1}
} {4.9}

#ACTION {^     {#.+#}$}
{
    #MATH bru_map_int {&bru_map[] + 1};
    #LIST bru_map[$bru_map_int] TOKENIZE {%1}
} {5}

#ALIAS {brumap}
{
    #VAR bru_dim 31;
    #VAR draw_map_status 1;
    #MAP CREATE;
    #MAP GOTO 1;
    #LOOP 1 $bru_dim bru_row
    {
        #LOOP 1 $bru_dim bru_col
        {
