        #IF { @_an_aus{gruppe[folgen]} && @_an_aus{gruppe[partner]} } {
            #$gruppe[partner] #MAP READ maps/silberland.map;
            #$gruppe[partner] #MAP GOTO loewenherz
        };
        #MAP READ maps/silberland.map;
        #MAP GOTO loewenherz
    };

}

