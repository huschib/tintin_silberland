    };
    #IF {&brunnen_npc[$tmp][immun][%*]}
    {
        #FORMAT complete_name {%s [<118>%s<099>]} {$complete_name} {@resis_text_noarticle{$brunnen_npc[$tmp][immun]}};
    };
    #ECHO $complete_name;
    #LINE GAG
