#FUNCTION {feind_zielen}
{
    #IF {"%0" == "{[A-Za-z\-]+}"}
    {
        #NOP #ECHO {w: '%0'};
        #RETURN {%0}
    };
    #IF {("%0" == "{[0-9]+}") && (&feinde[%0]) }
    {
        #NOP #ECHO {z: '%0' '$feinde[%0]'};
        #RETURN {$feinde[%0]}
    };
    #ELSE
    {
        #NOP #ECHO {z: wos};
        #RETURN {}
    }
}

