#FUNCTION {alktest}
{
    #NOP { /**
     *  @brief  Alkoholtest um unnoetige Spellpause zu vermeiden
     *
     *  @param  1   Zahl
     *  @return     Boolean
     */};

    #LOCAL index {};
    #LOCAL regex {};
    #LIST CONST_ALKOHOL FIND $status[alcohol] index;
    #IF {%0 >= $index}
    {
        #ECHO {Nicht genug Alkohol um '%n' ausfuehren zu koennen.} {$spell};
        #RETURN 0
    };
    #ELSE
    {
        #RETURN 1
    }
}

