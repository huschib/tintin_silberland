#ALIAS {setnospell}
{
    #VAR nospell %0;
    #TICKER {nospell}
    {
        #FORMAT nospell {%+2m} {$nospell - 1};
        #IF {!$nospell}
        {
            #VAR nospell { -};
            draw_status;
            #UNTICKER {nospell}
        };
        #ELSE
        {
            draw_status
        }
    } {1}
}

