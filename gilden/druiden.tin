            };
            #ELSEIF { "%%2" == "verteidigen" } {
                #VAR druid_elementar[3] {@swap_state{$druid_elementar[3];on}};
            };
            #NOP #VAR kampf[helfer] %2;
        };
    };
} {5.1}

