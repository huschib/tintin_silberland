#FUNCTION waldlaeufer_fert {
    #LIST wfort FIND {%0} tmp;
    #IF {$tmp < 11} {
        #VAR tmp_color {<bba>}
    };
    #ELSEIF {$tmp < 15} {
        #VAR tmp_color {<bca>}
    };
    #ELSEIF {$tmp < 18} {
        #VAR tmp_color {<bdb>}
    };
    #ELSEIF {$tmp < 21} {
        #VAR tmp_color {<dea>}
    };
    #ELSEIF {$tmp < 25} {
        #VAR tmp_color {<bfa>}
    };
    #ELSE {
        #VAR tmp_color {<dfc><388>}
    };
    #RETURN ${tmp_color}%0
}

