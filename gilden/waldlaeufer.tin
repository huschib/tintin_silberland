    #REGEXP {$waldlaeufer_tier_status} {%+{\d+}%!*|%.} {
        #IF { "&3" == " " } {
            #VAR tmp_tier_pad {$color_inactive}
        };
        #ELSE {
            #VAR tmp_tier_pad {$color_active}
