        #IF { $status[diffhp] > 0 } {
            shift_statusband <020>+$status[diffhp]<099>
        };
        #IF { $status[diffmp] < 0 } {
            shift_statusband <140>$status[diffmp]<099>
        };
        #IF { $status[diffhp] < 0 } {
            shift_statusband <010>$status[diffhp]<099>
        };
        #IF { $status[diffhp] != 0 || $status[diffmp] != 0 } {
