    #LIST tmp_bandolier FILTER %*%1%*;
    #LIST tmp_bandolier INDEXATE name;
    #LIST tmp_bandolier SIMPLIFY;
    #REPLACE {tmp_bandolier} {;} {|};
    #RETURN $tmp_bandolier
}

